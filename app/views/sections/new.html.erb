<% provide(:title, 'New sction') %>
<h1>New section</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@section) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :long_name %>
      <%= f.text_field :long_name %>

      <%= f.label :short_name %>
      <%= f.text_field :short_name %>

      <%= f.submit "Create new section", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>